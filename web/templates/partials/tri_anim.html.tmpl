      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+6.75s; clock.repeatEvent+6.75s" dur="0.80s"
                        from="0.42187500" to="0.31640625" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+9.15s; clock.repeatEvent+9.15s" dur="0.80s"
                        from="0.31640625" to="0.42187500" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+13.15s; clock.repeatEvent+13.15s" dur="0.80s"
                        from="0.42187500" to="0.56250000" fill="freeze" />
    </g>
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+1.95s; clock.repeatEvent+1.95s" dur="0.80s"
                    from="24.0 0 0" to="36.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+6.75s; clock.repeatEvent+6.75s" dur="0.80s"
                    from="36.0 0 0" to="48.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+9.15s; clock.repeatEvent+9.15s" dur="0.80s"
                    from="48.0 0 0" to="36.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+13.15s; clock.repeatEvent+13.15s" dur="0.80s"
                    from="36.0 0 0" to="24.0 0 0" fill="freeze" />
  </g>

  <!-- Triangle 5 -->
  <g id="rotate_n5">
    <g id="scale_n5">
      <use href="#tri" id="n5" opacity="0">
        <animate attributeName="opacity" from="0" to="1"
                 begin="clock.begin+2.75s; clock.repeatEvent+2.75s" dur=".01s" fill="freeze" />
        <animate attributeName="opacity" from="1" to="0"
                 begin="clock.begin+8.35s; clock.repeatEvent+8.35s" dur=".01s" fill="freeze" />
        <animate attributeName="opacity" from="0" to="1"
                 begin="clock.begin+8.35s; clock.repeatEvent+8.35s" dur=".01s" fill="freeze" />
        <animate attributeName="opacity" from="1" to="0"
                 begin="clock.begin+13.15s; clock.repeatEvent+13.15s" dur=".01s" fill="freeze" />
      </use>
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+2.75s; clock.repeatEvent+2.75s" dur="0.80s"
                        from="0.42187500" to="0.31640625" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+7.55s; clock.repeatEvent+7.55s" dur="0.80s"
                        from="0.31640625" to="0.23730469" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+8.35s; clock.repeatEvent+8.35s" dur="0.80s"
                        from="0.23730469" to="0.31640625" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+12.35s; clock.repeatEvent+12.35s" dur="0.80s"
                        from="0.31640625" to="0.42187500" fill="freeze" />
    </g>
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+2.75s; clock.repeatEvent+2.75s" dur="0.80s"
                    from="36.0 0 0" to="48.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+7.55s; clock.repeatEvent+7.55s" dur="0.80s"
                    from="48.0 0 0" to="60.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+8.35s; clock.repeatEvent+8.35s" dur="0.80s"
                    from="60.0 0 0" to="48.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+12.35s; clock.repeatEvent+12.35s" dur="0.80s"
                    from="48.0 0 0" to="36.0 0 0" fill="freeze" />
