                 begin="clock.begin+12.35s; clock.repeatEvent+12.35s" dur=".01s" fill="freeze" />
      </use>
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+3.55s; clock.repeatEvent+3.55s" dur="0.80s"
                        from="0.31640625" to="0.23730469" fill="freeze" />
      <animateTransform attributeName="transform" type="scale"
                        begin="clock.begin+11.55s; clock.repeatEvent+11.55s" dur="0.80s"
                        from="0.23730469" to="0.31640625" fill="freeze" />
    </g>
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+3.55s; clock.repeatEvent+3.55s" dur="0.80s"
                    from="48.0 0 0" to="60.0 0 0" fill="freeze" />
  <animateTransform attributeName="transform" type="rotate"
                    begin="clock.begin+11.55s; clock.repeatEvent+11.55s" dur="0.80s"
                    from="60.0 0 0" to="48.0 0 0" fill="freeze" />
  </g>

  </g>
{{end}}
