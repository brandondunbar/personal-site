{{- define "about" -}}
{{- with .Site.About -}} {{/* Start a 'with' block to scope to the About object */}}
<section id="about" class="section section--blueprint">
  <svg class="blueprint-grid-bg" viewBox="0 0 1600 900" aria-hidden="true" focusable="false" role="img">
    <defs>
      <pattern id="blueprint-grid" width="48" height="48" patternUnits="userSpaceOnUse">
        <path d="M48 0H0V48" fill="none" stroke="currentColor" stroke-opacity=".12"/>
      </pattern>
    </defs>
    <rect width="1600" height="900" fill="url(#blueprint-grid)"/>
  </svg>

  <div class="container">
    <div class="about-inner">
      <div class="section-header">
        <h2>{{ or .Title "About" }}</h2>
      </div>

      <div class="about-content">
        {{- range .Paragraphs }}
          <p>{{ . }}</p>
        {{- end }}
      </div>

      <div class="about-cta">
        {{/* === Link Order: GitHub, LinkedIn, Get in touch, CV, LeetCode === */}}

        {{- with $.Site.Links.GitHub -}}
          <a href="{{ . }}" class="btn btn--ghost">GitHub</a>
        {{- end -}}

        {{- with $.Site.Links.LinkedIn -}}
          <a href="{{ . }}" class="btn btn--ghost">LinkedIn</a>
        {{- end -}}

        <a href="#contact" class="btn">Get in touch</a>

        {{- with $.Site.Links.CV -}}
          <a href="{{ . }}" class="btn btn--ghost">CV</a>
        {{- end -}}

        {{- with $.Site.Links.LeetCode -}}
          <a href="{{ . }}" class="btn btn--ghost">LeetCode</a>
        {{- end -}}
      </div>
    </div>
  </div>
</section>
{{- end -}} {{/* End the 'with' block */}}
{{- end -}}


